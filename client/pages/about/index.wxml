<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <view wx:if="{{!hasUserInfo && canIUse}}">
      <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo">微信登录</button>
    </view>
    <block wx:else>
      <view wx:if="{{ userName && 1 }}">
        <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </view>
      <view wx:else>
        <input type='text' placeholder='请绑定姓名后使用' class='nameinput' bindinput='inputChange' auto-focus></input>
        <button bindtap="bindName">绑定</button>
      </view>
    </block>
  </view>
  <view class="list middle" bindtap="updateLog">更新记录</view>
  <view class="list top" bindtap="versionInfo">版本信息</view>
  <view class="list bottom" bindtap="aboutUs">关于我们</view>
  <view class="list bottom" bindtap="bugTo">反馈BUG</view>
  <weapp-toptip delay="2000" type="{{ toptipType }}" title="{{ toptipTitle }}" />
</view>