/*滑动样式*/
.hSwiper{
	height: 100%;
	overflow: hidden;
	position: relative;
}

.hSwiperCon{
	height: 100%;
	will-change: transform;
	position: absolute;
}
.item{
	width: 100%;
	height: 100%;
	position:relative;
	float: left;
	box-sizing:border-box;
}

 .type2 {
  width: 100%;
  height: 100%;
  display: flex; 
  padding-top:80px;
  justify-content: center; 
  color: black;
}

.prompt {
  position: absolute;
  top:20px;
  left: 4.5%;
  height: 40px;
}
 
.logo {
  width: 50px;
  height: 50px;
  border-radius: 15px;
  box-shadow: 0 0 10px 0 rgba(30, 30, 30,0.3); 
}

.panel {
  height: 200px;
  width: 50%;
  position: absolute;
  border-radius: 5px;
  bottom:200px;
  text-align: center;
  line-height: 40px;
  font-size:18px;
}

.title {
  color: rgba(255, 69, 0,1);
  font-size: 14px;
}

.button {
  height: 40px;
  width: 200px;
  background: #f5f5f5;
  color: rgba(23, 168, 226,1);
  position: absolute;
  bottom:25px;
  border-radius: 5px;
  box-shadow: 0 0 5px 1px rgba(30, 30, 30,0.15);
  line-height: 40px;
  text-align: center;
  font-size:18px;
  letter-spacing: 3px;
  font-weight: 900;
}

.button:active {
  transform: scale(1.01)
}

.picker {
  height: 40px;
  width: 50%;
  font-size: 15px;
  color: rgba(30, 30, 30,1);
}
