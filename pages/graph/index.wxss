.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0;
} 

ec-canvas {
  position: absolute;
  left: 0;
  width: 100%;
  height: 100%;
}

.chartTitle {
  font-size: 15px;
  opacity: 0.8;
  color:rgba(30, 30, 30,1);
}

.notice {
  position: absolute;
  width: 60%;
